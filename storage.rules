rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in a user-specific folder
    match /users/{userId}/{allPaths=**} {
      // Allow read, write, and delete access only if the requesting user's ID
      // matches the {userId} in the path. This ensures users can only
      // access their own files.
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
